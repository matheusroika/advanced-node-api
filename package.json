{
  "scripts": {
    "start": "node dist/main",
    "start:watch": "nodemon dist/main",
    "build": "rimraf dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:watch": "rimraf dist && tsc -p tsconfig.build.json && (concurrently \"tsc -p tsconfig.build.json -w\" \"tsc-alias -p tsconfig.build.json -w\")",
    "dev": "rimraf dist && tsc -p tsconfig.build.json && (concurrently \"tsc -p tsconfig.build.json -w\" \"tsc-alias -p tsconfig.build.json -w\" \"nodemon dist/main\")",
    "debug": "nodemon --inspect=0.0.0.0:9222 dist/main",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:watch": "yarn test --watch",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:verbose:watch": "yarn test:verbose --watch",
    "test:staged": "yarn test --findRelatedTests",
    "test:ci": "yarn test --coverage",
    "test:fb-api": "yarn test -c ./jest.integration.config.js ./tests/external/facebookApi.test.ts"
  },
  "name": "advanced-node-api",
  "version": "0.0.1",
  "main": "index.js",
  "author": "Matheus Roika <matheusroika@hotmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "pg": "^8.11.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@jest-mock/express": "^2.0.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.8",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "eslint": "^8.46.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-mock-extended": "^3.0.5",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "pg-mem": "^2.6.13",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": "18.x"
  }
}
